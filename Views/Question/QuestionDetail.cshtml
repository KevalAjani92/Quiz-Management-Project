@model QuizManagement.Models.QuestionModel

@{
    ViewData["Title"] = "Question Details";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Question Details</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Dashboard">Home</a></li>
                <li class="breadcrumb-item">Questions</li>
                <li class="breadcrumb-item active">Question Details</li>
            </ol>
        </nav>
    </div>

    <!-- Glassmorphism Card -->
    <div class="card glassmorphism-card p-4 mt-3">
        <div class="card-body">
            <h5 class="card-title text-center mb-4 fw-bold">📖 Question Details</h5>

            <div class="question-info">
                <div class="row g-3">
                    <div class="col-md-4">
                        <strong>📌 Question ID:</strong> <span id="questionID">@Model.QuestionID</span>
                    </div>
                    <div class="col-md-4">
                        <strong>📋 Type:</strong> <span id="questionType">@(string.IsNullOrEmpty(Model.OptionC) ? "True / False" : "MCQ")</span>
                    </div>
                    <div class="col-md-4">
                        <strong>✅ Status:</strong> <span id="activeStatus" class="@(Convert.ToInt32(Model.IsActive) == 1 ? "text-success" : "text-danger") fw-bold">@Model.IsActive</span>
                    </div>
                </div>

                <hr>

                <div class="row g-3">
                    <div class="col">
                        <strong>📝 Question:</strong>
                        <p id="questionText" class="fs-5 fw-semibold text-primary">@Model.QuestionText</p>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <strong>🎯 Difficulty:</strong>
                        
                        <span id="questionLevel" class="badge bg-primary">@ViewBag.QuestionLevel</span>
                    </div>

                    <div class="col-md-6">
                        <strong>🏆 Marks:</strong> <span id="questionMarks" class="fw-bold text-danger">@Model.QuestionMark</span>
                    </div>
                </div>

                <hr>

                <div class="row g-3">
                    <div class="col-md-6">
                        <strong>🔹 Option A:</strong> <span id="optionA">@Model.OptionA</span>
                    </div>
                    <div class="col-md-6">
                        <strong>🔹 Option B:</strong> <span id="optionB">@Model.OptionB</span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <strong>🔹 Option C:</strong> <span id="optionC">@(string.IsNullOrEmpty(Model.OptionC) == true ? "NA" : Model.OptionC)</span>
                    </div>
                    <div class="col-md-6">
                        <strong>🔹 Option D:</strong> <span id="optionD">@(string.IsNullOrEmpty(Model.OptionD) == true ? "NA" : Model.OptionD)</span>
                    </div>
                </div>

                <hr>

                <div class="row g-3">
                    <div class="col-md-6">
                        <strong>✅ Correct Answer:</strong>
                        <span id="correctOption" class="fw-bold text-success">@Model.CorrectOption</span>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="text-center pt-4">
                <button type="button" class="btn btn-outline-primary px-4" onclick="goBack()">⬅ Back</button>
            </div>
        </div>
    </div>
</main>

<!-- CSS Styles -->
<style>
    /* Glassmorphism Card */
    .glassmorphism-card {
        background: linear-gradient(120deg, rgba(178, 235, 242, 0.2) 5%, rgba(129, 212, 250, 0.2) 50%, rgba(187, 222, 251, 0.2) 95%);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Responsive Spacing */
    .row.g-3 > div {
        padding-top: 5px;
        padding-bottom: 5px;
    }
</style>

<!-- JavaScript for Back Button -->
<script>
    function goBack() {
        window.history.back();
    }
</script>